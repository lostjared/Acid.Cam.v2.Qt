/*
 * Acid Cam v2 - Professional Stylesheet
 * Black + Red Professional Theme
 */

/* Main Application */
QMainWindow, QDialog {
    background-color: #0f0f0f;
    color: #e6e6e6;
}

/* Group Boxes */
QGroupBox {
    color: #f2f2f2;
    border: 1px solid #2c2c2c;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 20px;
    font-weight: 600;
    background-color: #151515;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 10px 0 10px;
    margin-left: 12px;
    color: #f2f2f2;
}

/* Buttons */
QPushButton {
    background-color: #1c1c1c;
    color: #f2f2f2;
    border: 1px solid #333333;
    border-radius: 4px;
    padding: 4px 10px;
    font-weight: 600;
    font-size: 10px;
    min-width: 60px;
    min-height: 20px;
    max-height: 30px;
}

QPushButton:hover {
    background-color: #242424;
    border: 1px solid #b71c1c;
}

QPushButton:pressed {
    background-color: #0f0f0f;
    border: 1px solid #d32f2f;
}

QPushButton:disabled {
    background-color: #2a2a2a;
    color: #6e6e6e;
    border: 1px solid #2f2f2f;
}

/* Primary Action Buttons */
QPushButton#btnPrimary {
    background-color: #b71c1c;
    border: 1px solid #d32f2f;
}

QPushButton#btnPrimary:hover {
    background-color: #d32f2f;
}

/* Danger Buttons */
QPushButton#btnDanger {
    background-color: #7f0000;
    border: 1px solid #b71c1c;
}

QPushButton#btnDanger:hover {
    background-color: #b71c1c;
}

/* Secondary Buttons */
QPushButton#btnSecondary {
    background-color: #1f1f1f;
    border: 1px solid #3a3a3a;
}

QPushButton#btnSecondary:hover {
    background-color: #2b2b2b;
}

/* Combo Boxes */
QComboBox {
    background-color: #1a1a1a;
    border: 1px solid #333333;
    border-radius: 4px;
    padding: 5px 10px;
    min-height: 22px;
    font-size: 10px;
    color: #f2f2f2;
    selection-background-color: #b71c1c;
}

QComboBox:hover {
    border: 1px solid #b71c1c;
}

QComboBox::drop-down {
    border-left: 1px solid #333333;
    border-radius: 0 6px 6px 0;
    background-color: #141414;
}

QComboBox QAbstractItemView {
    background-color: #1a1a1a;
    border: 1px solid #333333;
    selection-background-color: #b71c1c;
    color: #f2f2f2;
    padding: 2px;
}

/* List Widgets */
QListWidget {
    background-color: #121212;
    border: 1px solid #333333;
    border-radius: 6px;
    gridline-color: #2a2a2a;
    outline: 0;
    color: #f2f2f2;
}

QListWidget::item {
    padding: 4px;
    height: 22px;
    background-color: #121212;
}

QListWidget::item:hover {
    background-color: #1c1c1c;
}

QListWidget::item:selected {
    background-color: #b71c1c;
    color: #ffffff;
}

/* Sliders */
QSlider::groove:horizontal {
    background: #2a2a2a;
    border-radius: 3px;
    height: 6px;
}

QSlider::handle:horizontal {
    background: #b71c1c;
    border: 1px solid #d32f2f;
    width: 14px;
    margin: -5px 0;
    border-radius: 7px;
}

QSlider::handle:horizontal:hover {
    background: #d32f2f;
}

QSlider::sub-page:horizontal {
    background: #5a1a1a;
    border-radius: 4px;
}

/* Spin Boxes and Input Fields */
QSpinBox, QDoubleSpinBox, QLineEdit {
    background-color: #1a1a1a;
    border: 1px solid #333333;
    border-radius: 6px;
    padding: 6px 10px;
    font-size: 12px;
    color: #f2f2f2;
}

QSpinBox:hover, QDoubleSpinBox:hover, QLineEdit:hover {
    border: 1px solid #b71c1c;
}

QSpinBox:focus, QDoubleSpinBox:focus, QLineEdit:focus {
    border: 2px solid #d32f2f;
    background-color: #1a1a1a;
}

/* Check Boxes */
QCheckBox {
    spacing: 10px;
    color: #e6e6e6;
    font-size: 10px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked {
    background-color: #1a1a1a;
    border: 1px solid #3a3a3a;
    border-radius: 3px;
}

QCheckBox::indicator:unchecked:hover {
    border: 1px solid #b71c1c;
}

QCheckBox::indicator:checked {
    background-color: #b71c1c;
    border: 1px solid #d32f2f;
    border-radius: 3px;
}

/* Radio Buttons */
QRadioButton {
    spacing: 10px;
    color: #e6e6e6;
    font-size: 10px;
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
}

QRadioButton::indicator:unchecked {
    background-color: #1a1a1a;
    border: 2px solid #3a3a3a;
    border-radius: 9px;
}

QRadioButton::indicator:unchecked:hover {
    border: 2px solid #b71c1c;
}

QRadioButton::indicator:checked {
    background-color: #1a1a1a;
    border: 2px solid #d32f2f;
    border-radius: 9px;
}

/* Labels */
QLabel {
    color: #e6e6e6;
    font-size: 10px;
}

QLabel[bold="true"] {
    font-weight: 600;
}

/* Text Edits and Display */
QTextEdit {
    background-color: #111111;
    border: 1px solid #333333;
    border-radius: 6px;
    padding: 8px;
    font-family: "Courier New", monospace;
    font-size: 10px;
    color: #e6e6e6;
}

QTextEdit:focus {
    border: 2px solid #d32f2f;
}

/* Scroll Bars */
QScrollBar:vertical {
    background-color: #101010;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #2d2d2d;
    border-radius: 6px;
    min-height: 16px;
    margin: 2px 2px 2px 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #b71c1c;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
    height: 16px;
}

QScrollBar:horizontal {
    background-color: #101010;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #2d2d2d;
    border-radius: 6px;
    min-width: 16px;
    margin: 2px 2px 2px 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #b71c1c;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
    width: 16px;
}

/* Menu Bar */
QMenuBar {
    background-color: #0f0f0f;
    color: #e6e6e6;
    border-bottom: 1px solid #2c2c2c;
    padding: 4px 0;
}

QMenuBar::item:selected {
    background-color: #1c1c1c;
}

QMenuBar::item:pressed {
    background-color: #2a2a2a;
}

/* Menus */
QMenu {
    background-color: #141414;
    color: #e6e6e6;
    border: 1px solid #2c2c2c;
    border-radius: 6px;
    padding: 2px 0;
}

QMenu::item:selected {
    background-color: #b71c1c;
    color: #ffffff;
}

QMenu::separator {
    background-color: #2c2c2c;
    height: 1px;
}

/* Progress Bar */
QProgressBar {
    border: 1px solid #333333;
    border-radius: 6px;
    background-color: #101010;
    padding: 2px;
    text-align: center;
    height: 24px;
    color: #e6e6e6;
}

QProgressBar::chunk {
    background-color: #b71c1c;
    border-radius: 4px;
}

/* Status Bar */
QStatusBar {
    background-color: #0f0f0f;
    color: #9e9e9e;
    border-top: 1px solid #2c2c2c;
}

/* Tool Bars */
QToolBar {
    background-color: #0f0f0f;
    border-bottom: 1px solid #2c2c2c;
    padding: 4px;
}

QToolBar::separator {
    background-color: #2c2c2c;
}

/* Dialog */
QDialog {
    background-color: #0f0f0f;
    color: #e6e6e6;
}

/* Tabs */
QTabWidget::pane {
    border: 1px solid #2c2c2c;
}

QTabBar::tab {
    background-color: #eeeeee;
    color: #666666;
    padding: 8px 20px;
    margin-right: 2px;
    border: 1px solid #e0e0e0;
    border-bottom: none;
    border-radius: 4px 4px 0 0;
}

QTabBar::tab:selected {
    background-color: #2196F3;
    color: white;
    border: 1px solid #2196F3;
    border-bottom: 2px solid #2196F3;
}

QTabBar::tab:hover:!selected {
    background-color: #f5f5f5;
}

/* Separators */
QFrame[frameShape="4"] {
    background-color: #e0e0e0;
}

/* Tooltips */
QToolTip {
    background-color: #424242;
    color: #ffffff;
    border: 1px solid #212121;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 11px;
}

/* Focus Rectangle - Remove default ugly outline */
QWidget:focus {
    outline: none;
}

/* Disabled widgets */
QWidget:disabled {
    color: #999999;
}
